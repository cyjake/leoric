{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "declaration": false,
    "downlevelIteration": true,
    "importHelpers": true,
  },
  "exclude": [
    "dist",
    "Readme.md"
  ]
}
